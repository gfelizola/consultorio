			<s:TextArea id="txtObservacao" x="9" y="112" skinClass="app.skin.TextArea" width="481" height="170" text="{bindObservacao}"/>
			<s:Button id="btnSalvar" skinClass="app.skin.Button" x="10" y="300" label="SALVAR E VISUALIZAR IMPRESSÃO DE DADOS DESTA CONSULTA" click="onSalvar(event)"/>			
		</s:Group>
	</s:Scroller>	
